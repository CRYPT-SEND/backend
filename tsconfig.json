{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],                   
    "strict": true,
    "baseUrl": "./",
  "esModuleInterop": true,
  "resolveJsonModule": true,
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@src/*": ["src/*"]
    },
    "useUnknownInCatchVariables": false,
    "types": ["vitest/globals"],
  },
  "ts-node": {
    "swc": true,
    "require": [
      "tsconfig-paths/register",
      "./config.ts"
    ],
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "config.ts",
    "config/firebase.ts",
    "scripts",
    "eslint.config.ts",
    "vitest.config.mts",
    "jest.config.ts",
    "jest.setup.ts"
  ],
  "exclude": [
    "src/public/*"
  ]
}
